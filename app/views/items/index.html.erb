<table class="table">
  <thead>
  <tr>
    <th>Name</th>
    <th>Price</th>
    <th>Interest</th>
    <th>Duration</th>
    <th colspan="4"></th>
  </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
         <% if @user.items.any? %>
      <ol class="items">
        <%= render @items %>
      </ol>
      <%= will_paginate @items %>
    <% end %>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Remove', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
