<h1>Stock items</h1>


<table class="table">
  <thead>
  <tr>
    <th>Name</th>
    <th>Price</th>
    <th>Interest</th>
    <th>Duration</th>
    <th colspan="4"></th>
  </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= link_to item.name, item  %></td>
        <td><%= item.price %></td>
        <td><%= item.interest %></td>
        <td><%= item.duration %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Remove', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Add new stock item', new_item_path %>
